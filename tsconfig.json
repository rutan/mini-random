{
  "compilerOptions": {
    "target": "ESNext",
    "module": "Node16",
    "declaration": true,
    "declarationDir": "./lib",
    "outDir": "./lib",
    "moduleResolution": "node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
