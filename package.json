{
  "name": "@rutan/mini-random",
  "version": "0.1.3",
  "author": "ru_shalm",
  "email": "ru_shalm@hazimu.com",
  "license": "WTFPL",
  "homepage": "https://github.com/rutan/mini-random",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rutan/mini-random"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "lib/cjs/index.js",
  "types": "lib/cjs/index.d.ts",
  "module": "lib/esm/index.js",
  "files": [
    "src/",
    "lib/"
  ],
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "run-s lint test clean && run-p build:*",
    "build:cjs": "cross-env NODE_ENV=production tsc -p ./tsconfig.json",
    "build:esm": "cross-env NODE_ENV=production tsc -p ./tsconfig.esm.json",
    "clean": "rimraf ./lib",
    "watch": "tsc -w",
    "lint": "run-s lint:*",
    "lint:prettier": "prettier -c .",
    "test": "jest",
    "format": "prettier -w .",
    "precommit": "pretty-quick --staged",
    "prepublish": "npm run build"
  },
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.5",
    "cross-env": "^7.0.3",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4"
  }
}
